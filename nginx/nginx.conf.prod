server {
    listen 80;
    server_name rw-docker.com;
    location / {
        proxy_pass http://frontend:3000;
    }
    location /api {
        proxy_pass http://api:3001;
        rewrite ^/api/(.*) /$1 break;
    }
    location /auth/api {
        proxy_pass http://auth:3002;
        rewrite ^/auth/api/(.*) /$1 break;
    }
    location /mailer {
         proxy_pass http://mailer:3003;
         rewrite ^/mailer/(.*) /$1 break;
    }

}
